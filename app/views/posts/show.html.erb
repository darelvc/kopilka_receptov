<!--main-->
<main class="main" role="main">
	<!--wrap-->
	<div class="wrap clearfix">
		<!--breadcrumbs-->
		<nav class="breadcrumbs">
			<ul>
				<li><%= link_to 'Главная', root_path %></li>
				<li><%= link_to 'Статьи', posts_path %></li>
				<li><%= @post.title %></li>
			</ul>
		</nav>
		<!--//breadcrumbs-->

		<% # Meta information for the <head> section %>
		<% title @post.title %>
		
		<!--row-->
		<div class="row">
			<header class="s-title wow fadeInLeft">
				<div class="title">
					<h1><%= @post.title %></h1>
				</div>
				<% if current_user.admin? %>
					<div class="button_right">
						<%= link_to 'Редактировать статью', edit_post_path(@post), class: "button" %>
					</div>
				<% end %>
			</header>
			
			<!--content-->
			<section class="content three-fourth wow fadeInLeft">
				<!--blog entry-->
				<article class="post single">
					<div class="entry-meta">
						<div class="date">
							<span class="day"><%= @post.created_at.strftime("%d") %></span> 
							<span class="my"><%= @post.created_at.strftime("%b. %Y") %></span>
						</div>
						<div class="avatar">
							<%= link_to user_path(@post.user) do %>
								<%= image_tag @post.user.user_image.url(:thumb), :alt => "" %>
								<span><%= @post.user.chefname %></span>
							<% end %>
						</div>
					</div>
					<div class="container">
						<div class="entry-featured">
						<a href="#"><%= image_tag @post.post_image.url(:large) %></a>
						</div>
						<div class="entry-content">
							<p class="lead"><%= simple_format(@post.content) %></p>
						</div>
					</div>
				</article>
				<!--//blog entry-->
				
				<!--comments-->
				<div class="comments wow fadeInUp" id="comments">
					<%= render partial: 'the_comments/tree', locals: { commentable: @post, comments_tree: @comments } %>
				</div>
				<!--//comments-->
				
			</section>
			<!--//content-->
		
			<!--right sidebar-->
			<aside class="sidebar one-fourth wow fadeInRight">
				<div class="widget">
					<ul class="categories right">
						<li><a href="#">All recipes</a></li>
						<li class="active"><a href="#">Tips and Tricks</a></li>
						<li><a href="#">Events</a></li>
						<li><a href="#">Inspiration</a></li>
						<li><a href="#">Category name</a></li>
						<li><a href="#">Lorem ipsum</a></li>
						<li><a href="#">Dolor</a></li>
						<li><a href="#">Sit amet</a></li>
					</ul>
				</div>
				<div class="widget">
					<h3>Advertisment</h3>
					<a href="#"><img src="images/advertisment.jpg" alt="" /></a>
				</div>
			</aside>
			<!--//right sidebar-->
		</div>
		<!--//row-->
	</div>
	<!--//wrap-->
</main>
<!--//main-->