<!--main-->
<main class="main" role="main">
	<!--wrap-->
	<div class="wrap clearfix">

		<!--breadcrumbs-->
		<nav class="breadcrumbs">
			<ul>
				<li><%= link_to 'Главная', root_path %></li>
				<li><%= link_to 'Рецепты', recipes_path %></li>
				<li><%= @recipe.title %></li>
			</ul>
		</nav>
		<!--//breadcrumbs-->
		
		<% # Meta information for the <head> section %>
		<% title @recipe.title %>

		<!--row-->
		<div class="row">
			<header class="s-title wow fadeInLeft">
				<h1><%= @recipe.title %></h1>
			</header>
			<!--content-->
			<section class="content three-fourth">
				<div class="row">
				<!--recipe-->
					<div class="recipe">
						<!--two-third-->
						<article class="two-third wow fadeInLeft">
							<div class="image">
								<%= link_to '' do %>
									<%= image_tag @recipe.recipe_image.url(:large) %>
								<% end %>
							</div>
							<div class="intro" data-no-turbolink><p><%= raw @recipe.summary %></p></div>
							<div class="instructions" data-no-turbolink>
								<ol>
									<li><%= raw @recipe.description %></li>
								</ol>
							</div>
						</article>
						<!--//two-third-->
						
						<!--one-third-->
						<article class="one-third wow fadeInDown">
							<dl class="basic">
								<dt>Время подготовления</dt>
								<dd><%= @recipe.pre_time %></dd>
								<dt>Время приготовления</dt>
								<dd><%= @recipe.cook_time %></dd>
								<dt>Сложность</dt>
								<dd><%= @recipe.difficulty %></dd>
								<dt>Серверовка</dt>
								<dd><%= @recipe.servers %></dd>
							</dl>
							
							<dl class="user">
								<dt>Категория</dt>
                <% if @recipe.categories.any? %>
                  <dd><%= render @recipe.categories %></dd>
                <% else %>
                  <dd>Не указана</dd>
                <% end %>
								<dt>Автор</dt>
								<dd><%= link_to "#{@recipe.user.chefname}", user_path(@recipe.user) %></dd>
							</dl>
							
							<dl class="ingredients">
								<% @recipe.ingredients.each do |ing| %>
									<dt><%= ing.quantity %></dt>
									<dd><%= ing.name %></dd>
								<% end %>
							</dl>
						</article>
						<!--//one-third-->
					</div>
					<!--//recipe-->
					<%= render partial: 'the_comments/tree', locals: { commentable: @recipe, comments_tree: @comments } %>
				</div>
			</section>
			<!--//content-->

			<!--right sidebar-->
				<aside class="sidebar one-fourth wow fadeInRight">
					<%= render 'recipes/random_recipe' %>
					
					<div class="widget share">
						<ul class="boxed">
							<li class="light"><a href="#" title="Facebook"><i class="ico i-facebook"></i> <span>Share on Facebook</span></a></li>
							<li class="medium"><a href="#" title="Twitter"><i class="ico i-twitter"></i> <span>Share on Twitter</span></a></li>
							<li class="dark"><a href="#" title="Favourites"><i class="ico i-favourites"></i> <span>Add to Favourites</span></a></li>
						</ul>
